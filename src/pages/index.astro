---
import StarlightPage from "@astrojs/starlight/components/StarlightPage.astro";
import Hero from "@/components/Hero.astro";
import Content from "@/content/docs/index.mdx";
---

<style is:global>
  main > .content-panel:first-child {
    display: none !important;
  }

  main > .content-panel {
    border-top: none;
  }

  .sl-markdown-content {
    max-width: 40rem;
    margin-inline: auto;
  }
</style>
<StarlightPage
  frontmatter={{
    title: "",
    description:
      "Kubetail is a real-time logging dashboard for Kubernetes. View container logs in a terminal or a browser. Run anywhere - desktop, cluster, docker.",
    template: "splash",
    head: [
      { tag: "title", content: "Kubetail | Kubernetes logging dashboard" },
      {
        tag: "link",
        attrs: {
          rel: "preload",
          as: "image",
          fetchpriority: "high",
          href: "https://assets.kubetail.com/demo-light-poster.bb7f6d4a.webp",
        },
      },
      {
        tag: "link",
        attrs: {
          rel: "preload",
          as: "image",
          fetchpriority: "high",
          href: "https://assets.kubetail.com/demo-dark-poster.6070fba2.webp",
        },
      },
    ],
  }}
  hasSidebar={false}
>
  <Hero />
  <Content />
</StarlightPage>
