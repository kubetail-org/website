<style>
	footer {
		flex-direction: column;
		gap: 1.5rem;
	}
	.meta {
		gap: 0.75rem 3rem;
		justify-content: space-between;
		flex-wrap: wrap;
		margin-top: 3rem;
		font-size: var(--sl-text-sm);
		color: var(--sl-color-gray-3);
	}
	.meta > :global(p:only-child) {
		margin-inline-start: auto;
	}
	.site-footer {
		border-top: 1px solid var(--sl-color-gray-5);
		padding-top: 1.5rem;
		margin-top: 1rem;
	}
	:global(:root:not([data-has-sidebar])) .site-footer {
		width: 100vw;
		position: relative;
		left: 50%;
		right: 50%;
		margin-left: -50vw;
		margin-right: -50vw;
		padding-left: var(--sl-content-pad-x);
		padding-right: var(--sl-content-pad-x);
	}
	.copyright {
		font-size: var(--sl-text-sm);
		color: var(--sl-color-gray-3);
	}
	.social-links {
		display: flex;
		gap: 0.75rem;
		margin-top: 0.5rem;
	}
	.social-links a {
		color: var(--sl-color-gray-3);
		text-decoration: none;
	}
	.social-links a:hover {
		color: var(--sl-color-white);
	}
</style>
